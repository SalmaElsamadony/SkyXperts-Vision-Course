import cv2 as cv
import matplotlib.pyplot as plt 
import numpy as np
import sys
from skimage.util  import random_noise
path = "image/4.2.03.tiff"
img = cv.imread("image/4.2.03.tiff", cv.IMREAD_GRAYSCALE)
plt.figure(), plt.imshow(img, cmap="gray", vmin=0, vmax=255), plt.title('Original Image')
plt.show()
noisyImg = random_noise(img, mode="s&p",amount=0.05)
noisyImg = np.array(255*noisyImg, dtype="uint8")
plt.figure(), plt.imshow(noisyImg, cmap="gray", vmin=0, vmax=255), plt.title('Noisy Image')
plt.title('Noisy Image')
plt.show()
def adaptive_median_filter(img, max_window_size=7):
    padded_img = cv.copyMakeBorder , max_window_size//2, max_window_size//2 , max_window_size//2, cv.BORDER_REFLECT
    filtered_img = np.zeros_like(img)
img = cv.imread("noisy_image.png", cv.IMREAD_GRAYSCALE)
filtered = adaptive_median_filter(img, max_window_size=7)
plt.title('Adaptive Median')
plt.show()