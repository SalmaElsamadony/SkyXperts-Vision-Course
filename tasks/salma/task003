import cv2 as cv
import numpy as np
import sys
path = 'image/4.2.03.tiff'
img = cv.imread("image/4.2.03.tiff")
h,w,_ = img.shape
h = h
w = 100
dim = (h,w)
img_width =cv.resize(img, dim, interpolation=cv.INTER_AREA)
h,w,_ = img.shape
h = 200
w = w
dim = (h,w)
img_height =cv.resize(img, dim, interpolation=cv.INTER_AREA)
h,w,_ = img.shape
h = 200
w = 200
dim = (h,w)
img_heightandwidth =cv.resize(img, dim, interpolation=cv.INTER_AREA)
cv.imshow("orignal", img)
cv.waitKey(0)
cv.imshow("width image", img_width)
cv.waitKey(0)
cv.imshow("height image", img_height)
cv.waitKey(0)
cv.imshow("height and width image", img_heightandwidth)
cv.waitKey(0)
cv.destroyAllWindows()